<UserControl x:Class="AcadPluginTest.View.Controls.EditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:AcadPluginTest.View.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AcadPluginTest;component/Content/Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <uc:AcadObjectControl Grid.Row="0" />
        <StackPanel Grid.Row="1"
                    Style="{StaticResource BottomStackPanel}">
            <Button Style="{StaticResource CommonButtonStyle}"
                    Content="Обновить"
                    Command="{Binding RefreshCommand}"/>
            <Button Style="{StaticResource CommonButtonStyle}"
                    Command="{Binding SaveCommand}"
                    Content="Сохранить" />
        </StackPanel>
    </Grid>
</UserControl>
